<div class="panel">
  <% @cart_items.each do |i| %>
    <div class="row">
      <div class="small-3 columns">
        <% if i.item.picture.length == 0 %>
          <%= image_tag 'placeholder.png'%>
        <% else %>
          <%= image_tag i.item.picture%>
        <% end %>
      </div>
      <div class="small-9 columns"> 
        <div class="row">
          <div class="small-8 columns">
            <span><strong><%= link_to i.item.name, item_path(i.item)%></strong></span>
          </div>
          <div class="small-4 columns align-right">
            <span class="price"><%=number_to_currency i.item.price_on_date(Date.today)%></span>
          </div>
        </div>
        <div class="row">
          <div class="small-6 columns">
            <span> <strong>Quantity:</strong>  <%=i.quantity%> </span>
          </div>
          <div class="small-6 columns align-right">
            <span> <strong>Subtotal:</strong> <%=number_to_currency i.subtotal(Date.today)%> </span>
          </div>
        </div>

        <br>

      </div>
        
      <hr>

    </div>
  <% end %>
    <div class="row">
      <div class="small-6 small-push-6 columns align-right">
        <strong>Shipping Cost</strong>: <%= number_to_currency @shipping_costs %>
        <br>
        <strong>Grand Total</strong>: <%= number_to_currency @grand_total %>
      </div>
    </div>
</div>


