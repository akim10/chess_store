  <br>
<div class="row">
  <div class="small-10 small-push-1 columns">
  <h4 class="inline">Available Users</h4>

    <!-- Add a button for new instances of object -->
    <% if current_user.role? :admin %>
      <%= link_to new_user_path, class: "button small float-right add-item" do %>
        <!-- <i class="fa fa-plus"></i> -->
        &nbsp;Add a New User
      <% end %>
    <% end %>
    <br> <br>
  <% unless @users.nil? || @users.empty? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th width="175" class="centerText">Name</th>
            <th width="100" class="centerText">Username</th>
            <th width="250" class="centerText">Email</th>
            <th width="150" class="centerText">Phone Number</th>
            <th width="100" class="centerText">Role</th>
            <th width="100" class="centerText"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.proper_name, user_path(user) %></td>
              <td class="centerText"><%= user.username %></td>
              <td class="centerText"><%= user.email %></td>
              <td class="centerText"><%= user.phone %></td>
              <td class="centerText"><%= user.role %></td>
              <td class="centerText">
                <%= link_to edit_user_path(user), class: 'button tiny' do %>
                  Edit
                <% end %>
              </td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p>There are no users in the system at this time.</p>
  <% end %>
</div>
  <ul class="pagination text-center" role="navigation" aria-label="Pagination">
  </ul>

<ul class="pagination centerText" id="pages">
  <%= will_paginate @users, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
</ul>



